<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photos.fxml.LoginController">
    <VBox fx:id="loginCard" alignment="TOP_CENTER" layoutY="67.0" prefHeight="400.0" prefWidth="711.1" spacing="16.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">
        <Label alignment="CENTER" text="Photos App" textAlignment="CENTER">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Label fx:id="signinText" alignment="CENTER" text="Please sign in!" textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <VBox prefHeight="108.0" prefWidth="267.0" spacing="16.0">
            <VBox spacing="8.0">
                <Label text="Username">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameInput" maxWidth="1.7976931348623157E308" minWidth="-Infinity" onKeyPressed="#onUsernameKeyPressed" promptText="Username">
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>
            </VBox>
            <VBox spacing="8.0">
                <Label text="Password">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <PasswordField promptText="Password (unused)">
                    <font>
                        <Font size="16.0" />
                    </font>
                </PasswordField>
            </VBox>
            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onLogin" text="Login">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </VBox>
      <padding>
         <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
      </padding>
    </VBox>
</AnchorPane>
