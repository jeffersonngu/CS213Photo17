<?xml version="1.0" encoding="UTF-8"?>

<?import com.photos.fxml.LogoutButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="711.1" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photos.fxml.AdminController">
    <AnchorPane fx:id="card" layoutX="65.0" layoutY="23.0" prefHeight="336.0" prefWidth="621.0">
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
        </padding>
        <Label layoutX="363.0" layoutY="15.0" text="User List">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <ListView fx:id="usersListView" layoutX="184.0" layoutY="57.0" prefHeight="199.0" prefWidth="332.0"
                  AnchorPane.rightAnchor="32.0"/>
        <VBox layoutX="18.0" layoutY="89.0" prefHeight="133.0" prefWidth="200.0" spacing="16.0"
              AnchorPane.leftAnchor="0.0">
            <Label fx:id="addUserLabel" prefHeight="20.0" prefWidth="202.0" text="Input a new username"
                   wrapText="true">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            <VBox spacing="4.0">
                <Label text="Username">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                <TextField fx:id="addUserField" promptText="Username">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
            </VBox>
            <Button fx:id="addUserButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#onAddUser" text="Add User">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
        </VBox>
        <Label fx:id="deleteUserLabel" alignment="CENTER" layoutX="243.0" layoutY="264.0" prefHeight="15.0"
               prefWidth="330.0" text="Select a User from Above to Delete!">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <Button fx:id="deleteUserButton" layoutX="367.0" layoutY="286.0" mnemonicParsing="false"
                onAction="#onDeleteUser" text="Delete User"/>
    </AnchorPane>
  <LogoutButton layoutY="374.0" />
</AnchorPane>
